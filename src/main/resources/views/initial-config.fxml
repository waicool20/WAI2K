<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0"
      stylesheets="@../css/validation.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox fx:id="sikulixContent" spacing="10.0">
            <children>
                <Label text="Path to SikuliX JAR:"/>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="pathTextField" prefHeight="25.0" prefWidth="400.0"
                                   promptText="/path/to/sikulix.jar"/>
                        <Button fx:id="chooseButton" mnemonicParsing="false" prefWidth="75.0" text="Choose"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox fx:id="adbContent" spacing="10.0">
            <children>
                <Label text="Path to ADB executable:"/>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="adbPathTextField" prefHeight="25.0" prefWidth="400.0"
                                   promptText="/path/to/adb"/>
                        <Button fx:id="adbChooseButton" mnemonicParsing="false" prefWidth="75.0" text="Choose"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox fx:id="ocrContent">
            <children>
                <Label text="Several files are required for the WAI2K to work:"/>
                <VBox fx:id="requiredFilesVBox" spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </VBox>
                <Label text="Please download and put them in the ocr directory:&#10;"/>
                <Hyperlink fx:id="ocrPathLink" styleClass="link"/>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
